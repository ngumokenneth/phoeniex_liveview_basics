<h1 class="font-bold text-center text-blue-700 ext-3xl ">Create an Account</h1>
<.simple_form for={@form} id="registration_form" phx-change="validate" phx-submit="submit">
  <.input type="text" label="Name" field={@form[:name]}></.input>
  <.input type="email" label="Email" field={@form[:email]}></.input>
  <.input type="password" label="Password" field={@form[:password]}></.input>
  <:actions>
    <.button>Register</.button>
  </:actions>
</.simple_form>
